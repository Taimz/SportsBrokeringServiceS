
%h1 All Teams

%input{:type=>"hidden", :value=>params[:types1], :name=>:types1}
= form_tag teams_index_path :method => :post do
  Include: 
  - @all_types.each do |type|
    = type
    = check_box_tag "type[#{type}]",1,  @selected_types.include?(type) 
  = submit_tag 'Filter'

%table#teams
  %thead
    %tr
      %th Team
      %th Type
  %tbody
    - @teams.each do |t|
      %tr
        %td= t.name
        %td= t.team_type
